<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Math.sqrt(sumOfSquares[x,y,z of TYPE_LINEAR_ACCELERATION] )" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph1"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Sensor.TYPE_GYROSCOPE" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"

            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Sensor.TYPE_MAGNETIC_FIELD" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph3"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="5" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="GPS speed " />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph4"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="7" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:text="Audio Signal " />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph5"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="9" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph6"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_column="0"
            android:layout_row="10" />


    </GridLayout>


</LinearLayout>